<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Debug builds: allow cleartext for local development -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>

    <!-- Allow cleartext traffic for development servers -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Android emulator localhost -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <!-- Physical device localhost (via adb reverse) -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>

    <!--
        For physical device over WiFi: add your computer's IP here
        Example: <domain>192.168.1.100</domain>
    -->

    <!-- Production: only HTTPS allowed (default behavior) -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
